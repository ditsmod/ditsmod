{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "./",
    "tsBuildInfoFile": "dist/ts.tsbuildinfo",
    "paths": {
      "@ditsmod/core": ["../../packages/core/src/index.js"],
      "@ditsmod/trpc": ["../../packages/trpc/src/index.js"],
      "#app/*": ["./src/app/*"],
      "#db/*": ["./src/app/modules/db/*"],
      "#auth/*": ["./src/app/modules/auth/*"],
      "#post/*": ["./src/app/modules/post/*"],
      "#comments/*": ["./src/app/modules/post/comments/*"],
      "#message/*": ["./src/app/modules/message/*"],
    }
  },
  "include": ["src", "e2e"],
  "references": [
    { "path": "../../packages/core/tsconfig.build.json" },
    { "path": "../../packages/trpc/tsconfig.build.json" },
  ]
}
