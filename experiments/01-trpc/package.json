{
  "name": "experiment01",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "run-p dev:server dev:client --print-label",
    "dev:server": "run-p watch start:server",
    "dev:client": "wait-port 2021 && node --watch --enable-source-maps dist/app/client.js",
    "start:server": "yarn build && node --watch --enable-source-maps dist/main.js",
    "watch": "yarn build --watch",
    "clean": "rm -r dist*",
    "test": "yarn build-test && yarn esm-jest",
    "esm-jest": "yarn node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps $(yarn bin jest)",
    "build-test": "tsc -b tsconfig.e2e.json",
    "build": "tsc -b tsconfig.build.json"
  },
  "imports": {
    "#app/*": "./dist/app/*",
    "#modules/*": "./dist/app/modules/*"
  },
  "devDependencies": {
    "jest": "^30.1.1",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^2.0.13",
    "typescript": "^5.9.2",
    "wait-port": "^1.1.0"
  },
  "dependencies": {
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "zod": "^4.1.5"
  }
}
