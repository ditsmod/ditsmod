{
  "name": "@ditsmod/i18n",
  "type": "module",
  "version": "3.0.0-alpha.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/ditsmod/ditsmod.git"
  },
  "description": "Ditsmod module to integration with i18n (internalization)",
  "module": "dist/index.js",
  "scripts": {
    "test": "yarn build-test && yarn esm-jest",
    "esm-jest": "yarn node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps $(yarn bin jest)",
    "build-test": "tsc -b tsconfig.e2e.json",
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist*"
  },
  "imports": {
    "#types/*": "./dist/types/*",
    "#src/*": "./dist/*"
  },
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "ditsmod"
  ],
  "author": "Костя Третяк",
  "license": "MIT",
  "peerDependencies": {
    "@ditsmod/core": "^3.0.0-alpha.3",
    "@ditsmod/rest": "^3.0.0-alpha.3"
  },
  "devDependencies": {
    "jest": "^30.0.0",
    "npm-run-all": "*",
    "typescript": "*"
  }
}
