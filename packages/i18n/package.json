{
  "name": "@ditsmod/i18n",
  "type": "module",
  "version": "3.0.0-alpha.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/ditsmod/ditsmod.git"
  },
  "description": "Ditsmod module to integration with i18n (internalization)",
  "module": "dist/index.js",
  "scripts": {
    "test": "tsc -b tsconfig.e2e.json && vitest",
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist*"
  },
  "imports": {
    "#types/*": "./dist/types/*",
    "#src/*": "./dist/*"
  },
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "ditsmod"
  ],
  "author": "Костя Третяк",
  "license": "MIT",
  "peerDependencies": {
    "@ditsmod/core": "^3.0.0-alpha.1",
    "@ditsmod/routing": "^3.0.0-alpha.1"
  },
  "devDependencies": {
    "npm-run-all": "*",
    "typescript": "*",
    "vitest": "*"
  }
}
