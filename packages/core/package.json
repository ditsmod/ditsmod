{
  "name": "@ditsmod/core",
  "type": "module",
  "version": "3.0.0-alpha.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/ditsmod/ditsmod.git"
  },
  "homepage": "https://ditsmod.github.io/en/",
  "description": "NodeJS web framework writen in TypeScript",
  "module": "dist/index.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist*",
    "test": "yarn build-test && yarn esm-jest",
    "build-test": "tsc -b tsconfig.unit.json",
    "esm-jest": "yarn node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps $(yarn bin jest)"
  },
  "imports": {
    "#di": "./dist/di/index.js",
    "#di/*": "./dist/di/*",
    "#init/*": "./dist/init/*",
    "#types/*": "./dist/types/*",
    "#utils/*": "./dist/utils/*",
    "#models/*": "./dist/models/*",
    "#decorators/*": "./dist/decorators/*",
    "#logger/*": "./dist/logger/*",
    "#error/*": "./dist/error/*",
    "#services/*": "./dist/services/*",
    "#extension/*": "./dist/extension/*",
    "#interceptors/*": "./dist/interceptors/*"
  },
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./di": {
      "types": "./dist/di/public-api.d.ts",
      "default": "./dist.di/public-api.js"
    }
  },
  "keywords": [
    "ditsmod"
  ],
  "author": "Костя Третяк <ktretiak.in.ua@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 20.6.0"
  },
  "dependencies": {
    "@ts-stack/chain-error": "^1.4.1",
    "@ts-stack/stack-utils": "^1.1.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "jest": "^30.0.0",
    "npm-run-all": "*",
    "typescript": "*"
  }
}
