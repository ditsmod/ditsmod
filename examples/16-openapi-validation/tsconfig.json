    "baseUrl": "./",
    "tsBuildInfoFile": "dist/ts.tsbuildinfo",
    "paths": {
      "#app/*": ["./src/app/*"],
      "@ditsmod/core": ["../../packages/core/src/index.js"],
      "@ditsmod/rest": ["../../packages/rest/src/index.js"],
      "@ditsmod/openapi": ["../../packages/openapi/src/index.js"],
