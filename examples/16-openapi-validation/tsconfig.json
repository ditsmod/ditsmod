      "@ditsmod/testing": ["../../packages/testing/src/index.js"],
    }
  },
  "include": ["src", "e2e"],
  "references": [
    { "path": "../../packages/body-parser/tsconfig.build.json" },
    { "path": "../../packages/core/tsconfig.build.json" },
    { "path": "../../packages/rest/tsconfig.build.json" },
    { "path": "../../packages/openapi/tsconfig.build.json" },
    { "path": "../../packages/i18n/tsconfig.build.json" },
