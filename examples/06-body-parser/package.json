{
  "name": "example06",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node --watch --enable-source-maps dist/main.js",
    "start:dev": "run-p watch start",
    "watch": "yarn build --watch",
    "clean": "rm -r dist*",
    "build-test": "tsc -b tsconfig.e2e.json",
    "test": "yarn build-test && yarn esm-jest",
    "esm-jest": "yarn node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps $(yarn bin jest)",
    "build": "tsc -b tsconfig.build.json"
  },
  "imports": {
    "#app/*": "./dist/app/*"
  },
  "devDependencies": {
    "jest": "^30.0.0",
    "npm-run-all": "*",
    "typescript": "^5.9.2"
  }
}
