{
  "name": "example03",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node --watch --enable-source-maps -r dotenv/config dist/main.js",
    "clean": "rm -r dist*",
    "start:dev": "run-p watch start",
    "watch": "yarn build --watch",
    "test": "yarn build-test && yarn esm-jest",
    "esm-jest": "yarn node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps $(yarn bin jest)",
    "build": "tsc -b tsconfig.build.json",
    "build-test": "tsc -b tsconfig.e2e.json"
  },
  "imports": {
    "#app/*": "./dist/app/*",
    "#auth": "./dist/app/modules/auth/index.js"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
