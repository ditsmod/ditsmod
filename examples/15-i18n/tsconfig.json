{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "./",
    "tsBuildInfoFile": "dist/ts.tsbuildinfo",
    "paths": {
      "#app/*": ["./src/app/*"],
      "#dict/first/*": ["./src/app/first/i18n/current/_base-en/*"],
      "#dict/second/*": ["src/app/second/i18n/current/_base-en/*"],
      "@ditsmod/core": ["../../packages/core/src/index.js"],
      "@ditsmod/rest": ["../../packages/rest/src/index.js"],
      "@ditsmod/i18n": ["../../packages/i18n/src/index.js"],
      "@ditsmod/testing": ["../../packages/testing/src/index.js"],
    }
  },
  "include": ["src", "e2e"],
  "references": [
    { "path": "../../packages/core/tsconfig.build.json" },
    { "path": "../../packages/rest/tsconfig.build.json" },
    { "path": "../../packages/i18n/tsconfig.build.json" },
    { "path": "../../packages/testing/tsconfig.build.json" },
  ]
}
